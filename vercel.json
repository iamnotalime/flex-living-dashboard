{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/mock-reviews.json"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/reviews/hostaway",
      "destination": "server/server.js"
    }
  ]
}